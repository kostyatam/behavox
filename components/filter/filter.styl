.filter
  position relative
  margin-bottom 10px

  &__input
    outline none
    display block
    width 100%
    border 1px solid #ccc
    border-radius 3px
    padding 8px
  &__list
    position absolute
    top -3px
    top 100%

.filter-list
  background #fff
  width 100%
  border 1px solid #ccc
  border-top none
  border-bottom none
  &__item
    padding 8px
    cursor pointer
    border-bottom 1px solid #ccc
    &:hover
      background rgba(#dadada, .2)

.label
  padding 3px 5px
  font-size 12px
  display inline-block
  border-radius 3px
  cursor pointer
  color #4c4c4c
  margin-right 10px

  &_everywhere
    background #baffd4

  &_person
    background #fff6c2