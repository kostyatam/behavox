.pagination
  width 100%
  &__item
    box-sizing border-box
    display inline-block
    margin-right 10px
    border-radius 3px
    padding 5px
    font-size 14px
    line-height 1
    cursor pointer
    min-width 24px
    text-align center
    color #808080

    &_active
      background #428bca
      color #fff